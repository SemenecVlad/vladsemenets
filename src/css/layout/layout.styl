.wrapper
  font-family 'Raleway', sans-serif
  width 100%
  color  $white
  margin 0
  padding 0

.container
  width 1024px
  margin 0px auto
  //outline 1px solid $red

  @media screen and (max-width: 640px)
    width 99%

  @media screen and (min-width: 768px) and (max-width: 1023px)
    width: 95%
  @media screen and (min-width: 568px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    width: 99%
.title-section
  height 99.5vh
  background-color $section-color
  text-align center

.about-me
  height 40rem
  background-color $section-color-2
  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 568px) and (max-height: 736px)
    //iPhone5,6,6s
    height auto
  @media screen and (min-width: 568px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    height: auto;
  @media screen and (max-width: 640px)
    height auto
  @media screen and (min-width: 768px) and (max-width: 1023px)
    height 60vh
  @media screen and (width: 960px)
    height 90vh

.my-works
  height 45rem
  background-color $section-color
  @media screen and (max-width: 640px)
    height auto
  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 568px) and (max-height: 736px)
    //iPhone5,6,6s
    height: auto
  @media screen and (min-width: 568px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    height: auto;
  @media screen and (min-width: 768px) and (max-width: 1023px)
    height: 38rem
  @media screen and (width: 960px)
    height: 105vh

.my-skills
  height auto
  background-color $section-color-2
  padding-bottom: 20px

  @media screen and (min-width: 768px) and (max-width: 1023px)
    height: 23rem

.about-me .title,
.my-skills .title
  color $section-color
  outline-color $section-color

footer
  //outline 2px solid yellow
  color white
  background-color $section-color

  .contact-container
    display flex
    flex-direction column
    flex-wrap wrap
    justify-content space-between
    width 95%
    padding 0 25px
    margin-top 4.5rem
    //outline 1px solid
    @media screen and (max-width: 640px)
      width: 96%
      position: relative
      left: 2%
      margin-top: 3.8rem
      padding: 0
    @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 568px) and (max-height: 736px)
      //iPhone5,6,6s
      margin-top: 40px
    @media screen and (min-width: 568px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
      //iPhone5,6,6s landscape
      margin-top 45px
    @media screen and (min-width: 768px) and (max-width: 1023px)
      width: 100%
      margin-top: 3.8rem
      padding: 0
