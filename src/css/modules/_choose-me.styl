.choose-me-container {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  width: 100%;
  min-height: 150px;
  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 479px) and (max-height: 736px) {
    flex-wrap: wrap;
    justify-content: space-around;
  }
  .choose-reason {
    width: 18%;
    min-height: 150px;
    cursor: pointer;
    position: relative;
    //outline: 1px solid $outline-color-nested;
    transition: .4s ease-out;
    @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 479px) and (max-height: 736px) {
      width: 30%;
    }
    &:hover {
      background-color: darken($lightwhite, 5%);
      //border: 1px solid darken($lightwhite, 15%);
      transition: .4s ease-in;
    }

    h4 {
      text-align: center;
      color: $black;
    }
    .icon-choose-reason {
      width: 60px;
      margin-left: 39%;
      margin-top: 20px;
    }
  }
}
