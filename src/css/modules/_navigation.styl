.navigation
  position relative
  top 20px
  height 40px
  z-index: 2
  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 479px) and (max-height: 736px)
    //iPhone5,6,6s
    top 10px

  a
    color $white
    text-decoration none
    padding 20px 35px
    //background-color $section-color
    border-bottom 3px solid $red
    border-width 0px
    transition .2s linear
    &:hover
      text-decoration underline
      //background-color lighten($section-color, 10%)
      transition .2s linear
      border-width 3px
    @media screen and (max-width: 600px)
      padding 20px 25px
    @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 479px) and (max-height: 736px)
      //iPhone5,6,6s
      padding: 13px 36px;
      display: inline-block;
    @media screen and (width: 480px) and (height: 320px)
      //iPhone4
      padding: 10px 20px;
      display: inline-block;
