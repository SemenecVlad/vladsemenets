.profile-image
  width 400px
  height 400px
  margin-top 80px
  border-radius 5px
  margin-left 25px

  @media screen and (max-width: 640px)
    width 40%
    height 40%
    margin-top 70px
    margin-left 20px

  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 568px) and (max-height: 736px)
    //iPhone5,6,6s
    width 87%
    height 87%
    margin-top 50px
    margin-left 20px
  @media screen and (min-width: 568px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    width 92%
    height 92%
    margin-top 50px
    margin-left 25px

  @media screen and (min-width: 768px) and (max-width: 1023px)
    width: 350px
    height: 350px
    margin-top: 70px
    margin-left: 0
