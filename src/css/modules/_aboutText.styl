.about-text
  color black
  width 550px
  position relative
  left 27.8rem
  bottom 25.5rem
  font-size 1.4rem
  text-indent 1.2rem
  font-size-adjust: .5
  line-height 1.4
  text-align justify

  @media screen and (max-width: 640px)
    width 50%
    left 17.2rem
    bottom 15.2rem
    font-size 1rem
    line-height 1.4

  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 479px) and (max-height: 736px)
    //iPhone5,6,6s
    position static
    width 87%
    margin 0 auto
    padding-bottom 10px

  @media screen and (min-width: 479px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    position static
    width 87%
    margin 0 auto
    padding-bottom 10px

  @media screen and (min-width: 768px) and (max-width: 1023px)
    width: 47%
    left: 23.5rem
    bottom: 22.5rem
    font-size: 1rem
    line-height: 1.4
