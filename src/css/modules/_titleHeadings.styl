.title
  font-size 39px
  outline 4px solid $white
  width 260px
  padding 5px
  text-align center
  margin 0 auto
  position relative
  top 5vh

  @media screen and (max-width: 640px)
    top 3vh

  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 568px) and (max-height: 736px)
    //iPhone5,6,6s
    font-size: 160%;
    width: 50%;
  @media screen and (min-width: 568px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    font-size: 180%
    width: 40%
    top 7vh
  @media screen and (min-width: 768px) and (max-width: 1023px)
    top 3vh
