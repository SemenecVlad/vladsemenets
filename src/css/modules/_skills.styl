.skills-container
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-between
  width 100%
  margin-top 4.5rem
  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 568px) and (max-height: 736px)
    //iPhone5,6,6s
    justify-content: space-around
    margin-top: 2.5rem
  @media screen and (min-width: 568px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    margin-top: 2.5rem

  .skill
    width 30%
    @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 568px) and (max-height: 736px)
      //iPhone5,6,6s
      width: 32%

    p
      color $black
      background-color $white
      text-align center
      font-size 1.5rem
      font-weight bold
      margin-top 0
      margin-bottom 0
      @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 568px) and (max-height: 736px)
        //iPhone5,6,6s
        font-size: .9rem
    img
      width 50%
      position relative
      left 25%
