.my-work-process-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  min-height: 150px;
  //outline: 1px solid $outline-color;

  .work-process-part {
    width: 24.9%;
    min-height: 150px;
    cursor: pointer;
    position: relative;
    //outline: 1px solid $outline-color-nested;
    transition: .4s ease-out;
    @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 479px) and (max-height: 736px) {
      width: 49.5%;
    }
    &:before {
      content: "âž¤";
      position: absolute;
      top: 40%;
      left: -4%;
      font-size: 150%;
      color: $black;
    }
    &:first-child:before {
      content: '';
    }
    &:hover {
      background-color: darken($lightwhite, 5%);
      //border: 1px solid darken($lightwhite, 15%);
      transition: .4s ease-in;
    }
    .icon-work-process {
      width: 60px;
      margin-left: 39%;
      margin-top: 20px;
    }
    h4 {
      text-align: center;
      color: $black;
    }
  }
}
