/*
  Styles for Logo section (Vladislav Semenets)
*/
.logo
  width 550px
  outline 10px solid $white
  position relative
  top 25vh
  margin 0 auto
  text-align left
  padding 10px
  z-index: 3

  @media screen and (max-width: 640px)
    width 80%
    outline 8px solid $white
  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 479px) and (max-height: 736px)
    //iPhone5,6,6s
    padding 1%
    top 30vh
  @media screen and (min-width: 479px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    width: 60%
    padding: 1%
    top 13vh

  @media screen and (width: 600px) and (height: 960px)
    //Nexus 7
    top 35vh
  @media screen and (width: 960px) and (height: 600px)
    //Nexus 7 landscape
    top 20vh

.logo-name
  font-size 50px
  @media screen and (max-width: 640px)
    font-size 2.8rem
  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 479px) and (max-height: 736px)
    //iPhone5,6,6s
    font-size 1.7rem
  @media screen and (min-width: 479px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    font-size: 1.6rem

.logo-surname
  font-size 104px
  font-weight bolder
  @media screen and (max-width: 640px)
    font-size 5.6rem
    font-weight bolder
  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 479px) and (max-height: 736px)
    //iPhone5,6,6s
    font-size 3rem
  @media screen and (min-width: 479px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    font-size: 3.9rem

/*
  Styles for postion block
  ('PASSIONATE FRONT-END DEVELOPER')
*/
.position
  color $black
  background-color $section-color-2
  padding 10px
  font-size 1.1rem
  font-weight bold
  width 400px
  margin 0 auto;
  position relative
  top 30vh
  z-index: 3
  @media screen and (width: 600px) and (height: 960px)
    //Nexus 7
    top 39vh
  @media screen and (width: 960px) and (height: 600px)
    //Nexus 7 landscape
    top 25vh
  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 479px) and (max-height: 736px)
    //iPhone5,6,6s
    width: 70%
    padding: 1%
    font-size: 1.1rem
    top: 35vh
  @media screen and (min-width: 479px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    width: 50%
    padding: 1%
    font-size: 1.1rem
    top 18.5vh


/*
  Styles for DOVNLOAD CV button
*/
.download-cv
  text-decoration none
  border-radius 0px
  border none
  color $white
  background-color $download
  padding 10px
  font-weight bold
  position relative
  top 35vh
  cursor pointer
  z-index: 3
  &:hover
    background-color darken($download, 45%)

  @media screen and (width: 600px) and (height: 960px)
    //Nexus 7
    top 44vh
    padding 20px 35px
  @media screen and (width: 960px) and (height: 600px)
    //Nexus 7 landscape
    top 30vh
  @media screen and (min-width: 320px) and (max-width: 415px) and (min-height: 479px) and (max-height: 736px)
    //iPhone5,6,6s
    top 40vh
  @media screen and (min-width: 479px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    top 25vh
