.scroll-icon
  // position: relative;
  // top: 40vh;
  position: absolute;
  bottom: 20px
  left 50%
  margin: 0 auto;
  animation-name: scrollDown;
  animation-duration: 1s;
  animation-iteration-count: infinite;
  @media screen and (min-width: 479px) and (max-width: 737px) and (min-height: 320px) and (max-height: 415px)
    //iPhone5,6,6s landscape
    display: none

  img
    width: 15px;

  @keyframes scrollDown
    from
      bottom 20px
    to
      bottom 25px
